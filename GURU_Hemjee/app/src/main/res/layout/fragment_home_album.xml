<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeAlbumFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="55.6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="84.6dp"
            android:layout_height="20dp"
            android:layout_marginStart="17dp"
            android:text="2022.01.20"
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:lineSpacingExtra="65.38px"
            android:fontFamily="@font/noto_sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="81.72px"
            android:text="0 : 00 : 00"
            android:textAlignment="textEnd"
            android:textColor="@color/Black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dayAlbumLayout"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/albumView1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/albumView4"
                    app:layout_constraintEnd_toStartOf="@+id/albumView2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/albumView2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/albumView5"
                    app:layout_constraintEnd_toStartOf="@+id/albumView3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/albumView1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/albumView3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/albumView6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/albumView2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/albumView4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/albumView5"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/albumView1"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/albumView5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/albumView6"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/albumView4"
                    app:layout_constraintTop_toBottomOf="@+id/albumView2"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/albumView6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/albumView5"
                    app:layout_constraintTop_toBottomOf="@+id/albumView3"
                    tools:srcCompat="@tools:sample/avatars" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dayAlbumLayout" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/goalAlbumLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:columnCount="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space"
                app:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1">


                    <ImageView
                        android:id="@+id/home_goalAlbumImageView1"
                        android:layout_width="156dp"
                        android:layout_height="156dp"
                        android:layout_gravity="center"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/noto_sans"
                        android:lineSpacingExtra="49.03px"
                        android:text="알고리즘 마스터하기"
                        android:textAlignment="textStart"
                        android:textColor="@color/Black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/timeTextView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="39dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/noto_sans"
                        android:lineSpacingExtra="81.72px"
                        android:text="0 : 00 : 00"
                        android:textColor="@color/Black"
                        android:textSize="20dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_gravity="center"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    >

                    <ImageView
                        android:id="@+id/home_goalAlbumImageView2"
                        android:layout_width="156dp"
                        android:layout_height="156dp"
                        android:layout_gravity="center"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/noto_sans"
                        android:lineSpacingExtra="49.03px"
                        android:text="매일 운동하기"
                        android:textAlignment="textStart"
                        android:textColor="@color/Black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/timeTextView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="39dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/noto_sans"
                        android:lineSpacingExtra="81.72px"
                        android:text="0 : 00 : 00"
                        android:textColor="@color/Black"
                        android:textSize="20dp" />
                </FrameLayout>
            </androidx.gridlayout.widget.GridLayout>

            <Space
                android:id="@+id/space2"
                android:layout_width="0dp"
                android:layout_height="46dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goalAlbumLayout" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space2">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="156dp" >

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="156dp"
                        android:layout_height="155.3dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="17.3dp"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="156dp"
                        android:layout_height="155.3dp"
                        android:layout_gravity="center"
                        tools:src="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="156dp"
                        android:layout_height="155.3dp"
                        android:layout_marginLeft="18dp"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="44dp"
                        android:text="공부"
                        android:textSize="12dp"
                        android:lineSpacingExtra="49.03px"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/noto_sans"
                        />

                    <TextView
                        android:id="@+id/timeTextView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="56dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/noto_sans"
                        android:lineSpacingExtra="81.72px"
                        android:text="0 : 00 : 00"
                        android:textColor="@color/Black"
                        android:textSize="20dp" />
                </FrameLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>