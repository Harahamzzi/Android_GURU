<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="17dp"
    android:background="@drawable/report_background"
    android:backgroundTint="@color/White"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/container_reportDaily_dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:gravity="center"
        android:text="1월 16일 일요일"
        android:textColor="@color/Black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/container_reportDaily_timeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:gravity="center"
        android:text="9시간 25분"
        android:textColor="@color/Black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/container_reportDaily_totalDailyBarChart"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <LinearLayout
        android:id="@+id/container_reportDaily_infoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</LinearLayout>