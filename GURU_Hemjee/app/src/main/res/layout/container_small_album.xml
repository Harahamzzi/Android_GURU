<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="178dp"
    android:layout_height="182dp"
    app:layout_columnWeight="1"
    app:layout_gravity="center"
    app:layout_rowWeight="1" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="7dp"
        app:cardCornerRadius="11dp"
        app:cardElevation="3dp" >

        <ImageView
            android:id="@+id/smallAlbum_goalAlbumImageView"
            android:layout_width="178dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@color/LightGray" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="178dp"
        android:layout_height="50dp"
        android:elevation="4dp"
        android:src="@drawable/small_up_cover"/>

    <ImageView
        android:layout_width="178dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:elevation="4dp"
        android:src="@drawable/small_down_cover" />

    <ImageView
        android:id="@+id/smallAlbum_iconImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="8dp"
        android:elevation="5dp"
        android:src="@drawable/ic_colorselectionicon"
        app:tint="@color/Blue" />

    <TextView
        android:id="@+id/smallAlbum_goalNameTextView"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="17dp"
        android:elevation="5dp"
        android:fontFamily="@font/noto_sans"
        android:includeFontPadding="false"
        android:lineSpacingExtra="49.03px"
        android:singleLine="true"
        android:text="알고리즘 마스터하기"
        android:textAlignment="textStart"
        android:textColor="@color/Black"
        android:textFontWeight="600"
        android:textSize="14dp" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="12dp"
        android:elevation="5dp"
        android:src="@drawable/timer_icon" />

    <TextView
        android:id="@+id/smallAlbum_timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:includeFontPadding="false"
        android:layout_gravity="bottom"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/noto_sans"
        android:lineSpacingExtra="81.72px"
        android:text="0 : 00 : 00"
        android:textFontWeight="500"
        android:textColor="@color/Black"
        android:textSize="26dp" />
</FrameLayout>