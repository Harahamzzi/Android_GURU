<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeReportFragment">

    <ScrollView
        android:id="@+id/homeReportScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- ***** 일간 ***** -->
            <TextView
                android:id="@+id/dailyTextView"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@drawable/outline_round_button"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="일간"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textFontWeight="300"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dayTextView"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="1월 1일 월요일"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dailyTextView" />

            <TextView
                android:id="@+id/todayTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="0시간 00분"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textFontWeight="700"
                android:textSize="21sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dayTextView" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/totalDailyBarChart"
                android:layout_width="430dp"
                android:layout_height="70dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/todayTimeTextView" />

            <!-- 일간 목표들 목록.. -->
            <LinearLayout
                android:id="@+id/dailyGoalListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="67dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/weekTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totalDailyBarChart">


            </LinearLayout>


            <!-- ***** 주간 ***** -->
            <TextView
                android:id="@+id/weekTextView"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="67dp"
                android:background="@drawable/outline_round_button"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="주간"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textFontWeight="300"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dailyGoalListLayout" />

            <TextView
                android:id="@+id/periodDayTextView"
                android:layout_width="98.3dp"
                android:layout_height="15dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="1월 1일 - 1월 7일"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weekTextView" />

            <TextView
                android:id="@+id/weekTimeTextView"
                android:layout_width="100dp"
                android:layout_height="29dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="0시간 00분"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textFontWeight="700"
                android:textSize="21sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/periodDayTextView" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/weekBarChart"
                android:layout_width="430dp"
                android:layout_height="160sp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weekTimeTextView" />

            <!-- 주간 목표들 목록.. -->
            <LinearLayout
                android:id="@+id/weekGoalListLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="17dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weekBarChart" />


            <!-- ***** 월간 ***** -->
            <TextView
                android:id="@+id/monthTextView"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="67dp"
                android:background="@drawable/outline_round_button"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="월간"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textFontWeight="300"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weekGoalListLayout" />

            <TextView
                android:id="@+id/monthDayTextView"
                android:layout_width="98.3dp"
                android:layout_height="15dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="2022년 1월"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monthTextView" />

            <TextView
                android:id="@+id/monthTimeTextView"
                android:layout_width="100dp"
                android:layout_height="29dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="0시간 00분"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textFontWeight="700"
                android:textSize="21sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monthDayTextView" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/monthBarChart"
                android:layout_width="430dp"
                android:layout_height="160dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monthTimeTextView" />

            <!-- 월간 목표들 목록.. -->
            <LinearLayout
                android:id="@+id/monthGoalListLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="17dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/monthBarChart" />

            <Space
                android:id="@+id/bottomSpace"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monthGoalListLayout" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>