<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:background="@drawable/main_block_background2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/colorIconImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_colorselectionicon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goalNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/noto_sans"
            android:text="알고리즘 마스터하기"
            android:textColor="@color/Black"
            android:textFontWeight="700"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/colorIconImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/iconListLayout"
            android:layout_width="160dp"
            android:layout_height="18dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goalNameTextView">

        </LinearLayout>

        <ImageButton
            android:id="@+id/startButtonImageView"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="13dp"
            android:background="@android:color/transparent"
            android:src="@drawable/main_start_button_img"
            app:layout_constraintStart_toEndOf="@+id/goalNameTextView"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>