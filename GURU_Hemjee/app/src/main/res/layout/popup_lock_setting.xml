<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="351dp"
    android:background="@drawable/pop_up_bg">

    <ImageButton
        android:id="@+id/lockCancelImageButton"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="27dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cancel_button" />

    <ImageButton
        android:id="@+id/settingOkImageButton"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="27dp"
        android:background="@color/White"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ok_button" />

    <ImageView
        android:id="@+id/lockSettingGoalColorImageView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/color_icon" />

    <TextView
        android:id="@+id/goalTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="5dp"
        android:drawablePadding="10dp"
        android:ems="8"
        android:fontFamily="@font/noto_sans"
        android:gravity="center|left"
        android:maxLines="1"
        android:singleLine="true"
        android:text="목표 제목"
        android:textColor="@color/Black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/changeGoalButton"
        app:layout_constraintStart_toEndOf="@+id/lockSettingGoalColorImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/changeGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="17dp"
        android:drawableRight="@drawable/right_open_button"
        android:drawablePadding="3dp"
        android:text="목표 변경"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@color/Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dot_line_horizontal" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="71dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timer_icon" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/noto_sans"
        android:text="잠금 시간 수정"
        android:textColor="@color/Black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/hourTimeEditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="2"
            android:gravity="center|top"
            android:inputType="number"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:textSize="10sp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/Black"
            android:fontFamily="@font/noto_sans"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/minTimeEditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="2"
            android:gravity="center|top"
            android:inputType="number"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:textSize="10sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/Black"
            android:fontFamily="@font/noto_sans"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/secTimeEditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="2"
            android:gravity="center|top"
            android:inputType="number"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:textSize="10sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="168dp"
        android:layout_weight="1"
        android:background="@drawable/ic_outline_app_registration_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_outline_app_registration_24" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="166dp"
        android:text="달성 가능한 세부 목표"
        android:textColor="@color/Black"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintStart_toEndOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/lockCancelImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hamster_inventory_bg"
        app:tint="@color/LightGray" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lockSettingDetailGoalRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>