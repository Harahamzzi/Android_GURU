<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="Home.Setting.SettingHelpFragment">

    <ImageView
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:src="@drawable/solid_main_app_bar" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/helpViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bottomAppBar"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="16dp"
        />

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/helpIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        app:dotsColor="@color/Yellow"
        app:selectedDotColor="@color/Orange"
        app:dotsSize="12dp"
        app:dotsSpacing="4dp"/>

</RelativeLayout>