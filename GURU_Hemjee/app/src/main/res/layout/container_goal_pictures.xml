    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/container_goalPictures_iconImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_colorselectionicon"
        app:layout_constraintBottom_toTopOf="@+id/container_goalPictures_lineView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/container_goalPictures_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/noto_sans"
        android:text="알고리즘 공부하기"
        android:textColor="@color/Black"
        android:textFontWeight="300"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/container_goalPictures_iconImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/container_goalPictures_lineView"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="-22dp"
        android:background="#E7E7E7"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="@+id/container_goalPictures_iconImageView"
        app:layout_constraintStart_toStartOf="@+id/container_goalPictures_iconImageView"
        app:layout_constraintTop_toBottomOf="@+id/container_goalPictures_iconImageView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/content_block_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/container_goalPictures_iconImageView"
        app:layout_constraintTop_toBottomOf="@+id/container_goalPictures_nameTextView">

