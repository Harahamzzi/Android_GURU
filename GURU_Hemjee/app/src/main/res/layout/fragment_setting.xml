<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGray"
    android:orientation="vertical"
    tools:context=".Home.Setting.SettingFragment">

    <ImageView
        android:id="@+id/setting_topBackgroundImageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/setting_top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setting_helloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans"
        android:text="안녕하세요."
        android:textColor="@color/Black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_hamzziNameTextView" />

    <TextView
        android:id="@+id/setting_hamzziNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/noto_sans"
        android:text="햄찌 이름"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setting_masterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/noto_sans"
        android:text="주인님,"
        android:textColor="@color/Black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/setting_hamzziNameTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/settingListLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/setting_buttom_bg"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_helloTextView">

        <LinearLayout
            android:id="@+id/setting_noticeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_imageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_outline_text_snippet_24"
                android:src="@drawable/ic_outline_text_snippet_24"
                app:srcCompat="@drawable/ic_outline_text_snippet_24" />

            <TextView
                android:id="@+id/setting_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:text="공지사항"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/setting_nextImageView2"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next_button" />
        </LinearLayout>

        <ImageView
            android:id="@+id/setting_listLineImageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal"
            app:srcCompat="@drawable/line_horizontal" />

        <LinearLayout
            android:id="@+id/setting_helpLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/ic_help"
                app:srcCompat="@drawable/ic_help"
                app:tint="@color/Black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:text="도움말"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next_button" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal" />

        <LinearLayout
            android:id="@+id/setting_supportLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_imageView3"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_support_agent_24"
                app:srcCompat="@drawable/ic_outline_support_agent_24"
                app:tint="@color/Black" />

            <TextView
                android:id="@+id/setting_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:text="문의"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/setting_nextImageView3"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next_button" />
        </LinearLayout>

        <ImageView
            android:id="@+id/setting_listLineImageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal" />

        <LinearLayout
            android:id="@+id/setting_introduceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_imageView4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_business_24"
                app:srcCompat="@drawable/ic_outline_business_24"
                app:tint="@color/Black" />

            <TextView
                android:id="@+id/setting_textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:text="개발진 소개"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/setting_nextImageView4"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next_button" />
        </LinearLayout>

        <ImageView
            android:id="@+id/setting_listLineImageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal" />

        <LinearLayout
            android:id="@+id/setting_openSourceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/ic_book_24"
                app:srcCompat="@drawable/ic_book_24"
                app:tint="@color/Black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:text="오픈소스 라이브러리"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next_button" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sans"
            android:text="버전"
            android:textSize="14dp"
            android:textFontWeight="400"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sans"
            android:gravity="center|right"
            android:text="1.0.5 v"
            android:textSize="14dp"
            android:textFontWeight="400"
            android:textColor="@color/Black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/setting_HamzziImageView"
        android:layout_width="102dp"
        android:layout_height="125dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="33dp"
        android:src="@drawable/front_hamzzi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>