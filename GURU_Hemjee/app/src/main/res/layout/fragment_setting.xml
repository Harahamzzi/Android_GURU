<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGray"
    android:orientation="vertical"
    tools:context=".Home.Setting.SettingFragment">

    <ImageView
        android:id="@+id/setting_topBackgroundImageView"
        android:layout_width="0dp"
        android:layout_height="159dp"
        android:scaleType="fitXY"
        android:src="@drawable/setting_top_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setting_helloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans"
        android:text="안녕하세요."
        android:textColor="@color/Black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_hamzziNameTextView" />

    <TextView
        android:id="@+id/setting_hamzziNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/noto_sans"
        android:text="햄찌 이름"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setting_masterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/noto_sans"
        android:text="주인님,"
        android:textColor="@color/Black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/setting_hamzziNameTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/setting_buttom_bg"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/setting_alarmLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_imageview1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notifications_icon" />

            <TextView
                android:id="@+id/setting_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:gravity="center|left"
                android:text="알림"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/setting_alarmSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/setting_listLineImageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal"
            app:srcCompat="@drawable/line_horizontal" />

        <LinearLayout
            android:id="@+id/setting_noticeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_imageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_outline_text_snippet_24"
                android:src="@drawable/ic_outline_text_snippet_24"
                app:srcCompat="@drawable/ic_outline_text_snippet_24" />

            <TextView
                android:id="@+id/setting_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:text="공지사항"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/setting_nextImageView2"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next_button" />
        </LinearLayout>

        <ImageView
            android:id="@+id/setting_listLineImageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal"
            app:srcCompat="@drawable/line_horizontal" />

        <LinearLayout
            android:id="@+id/setting_supportLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_imageView3"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_support_agent_24"
                app:srcCompat="@drawable/ic_outline_support_agent_24"
                app:tint="@color/Black" />

            <TextView
                android:id="@+id/setting_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:text="문의"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/setting_nextImageView3"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next_button" />
        </LinearLayout>

        <ImageView
            android:id="@+id/setting_listLineImageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal" />

        <LinearLayout
            android:id="@+id/setting_introduceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_imageView4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_business_24"
                app:srcCompat="@drawable/ic_outline_business_24"
                app:tint="@color/Black" />

            <TextView
                android:id="@+id/setting_textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:text="개발진 소개"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/setting_nextImageView4"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next_button" />
        </LinearLayout>

        <ImageView
            android:id="@+id/setting_listLineImageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal" />

        <LinearLayout
            android:id="@+id/setting_infoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_imageView5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_outline_info_24"
                app:tint="@color/Black" />

            <TextView
                android:id="@+id/setting_textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:text="정보"
                android:textColor="@color/Black"
                android:textSize="14sp"
                tools:textStyle="bold" />

            <ImageView
                android:id="@+id/setting_nextImageView5"
                android:layout_width="24dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next_button" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Gray"
            android:src="@drawable/line_horizontal" />


    </LinearLayout>

    <ImageView
        android:id="@+id/setting_HamzziImageView"
        android:layout_width="102dp"
        android:layout_height="125dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="33dp"
        android:src="@drawable/hamzzi3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>