<?xml version="1.0" encoding="utf-8"?>
<!-- 명예의 전당 화면 박스 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/solid_goal_item_default_box"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_fame_top_LLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingTop="16dp"
        android:paddingBottom="14dp">
        <!-- 대표목표 색상 -->
        <ImageView
            android:id="@+id/container_fame_goal_color_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_colorselectionicon"
            app:tint="@color/Pink"/>

        <!-- 임시 공백 -->
        <View
            android:id="@+id/container_fame_space_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <!-- 대표목표 제목 -->
        <TextView
            android:id="@+id/container_fame_goal_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <!-- 시간 -->
        <TextView
            android:id="@+id/container_fame_goal_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:paddingTop="2dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:background="@drawable/solid_goal_item_default_box"
            android:backgroundTint="@color/LightGray"
            android:maxLines="1"
            android:textColor="@color/DarkBrown"
            android:textSize="12sp"
            app:drawableTint="@color/DarkBrown"
            app:drawableStartCompat="@drawable/ic_timer"
            android:drawablePadding="4dp"/>

        <!-- 기간 -->
        <TextView
            android:id="@+id/container_fame_goal_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:paddingTop="2dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:background="@drawable/solid_goal_item_default_box"
            android:backgroundTint="@color/LightGray"
            android:maxLines="1"
            android:textColor="@color/DarkBrown"
            android:textSize="12sp"
            app:drawableTint="@color/DarkBrown"
            app:drawableStartCompat="@drawable/ic_calender_fame_16dp"
            android:drawablePadding="4dp"/>
    </LinearLayout>
</LinearLayout>