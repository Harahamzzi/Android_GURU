<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BigGoalSetupFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/headToolBar2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/BrightYellow"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="17dp"
            android:paddingEnd="17dp">

            <ImageView
                android:id="@+id/backImageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_outline_west_24"
                android:src="@drawable/menu_icon"
                app:srcCompat="@drawable/ic_outline_west_24" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:text="대표 목표"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headToolBar2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="28dp"
                android:text="목표"
                android:textColor="@color/Black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/bigGoalEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="17dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="32dp"
                android:text="색상"
                android:textColor="@color/Black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bigGoalEditText" />

            <RadioGroup
                android:id="@+id/colorRadioGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/orangeRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginBottom="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/Orange"
                        android:checked="true" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/lightGreenRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/LightGreen"
                        android:checked="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/YellowRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginBottom="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/Yellow"
                        android:checked="false" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/greenRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/Green"
                        android:checked="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/noteYellowRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginBottom="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/NoteYellow"
                        android:checked="false" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/lightBlueRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/LightBlue"
                        android:checked="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/apricotRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginBottom="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/Apricot"
                        android:checked="false" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/blueRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/Blue"
                        android:checked="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/seedBrownRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginBottom="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/SeedBrown"
                        android:checked="false" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/purpleRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/Purple"
                        android:checked="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/darkBrownRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginBottom="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/DarkBrown"
                        android:checked="false" />

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/pinkRadioBtn"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@drawable/selector_color_radio_button"
                        android:button="@drawable/ic_colorselectionicon"
                        android:buttonTint="@color/Pink"
                        android:checked="false" />
                </LinearLayout>

            </RadioGroup>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="32dp"
                android:text="목표 잠금 시간"
                android:textColor="@color/Black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/colorRadioGroup" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="17dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21">

                <!-- 시간 리스트가 보여질 list 레이아웃 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_big_goal_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

            </LinearLayout>

            <ImageView
                android:id="@+id/okBuyImageButton"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/setup_triangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/dot_line_horizontal"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/okBuyImageButton" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="32dp"
                android:text="사용 가능한 앱"
                android:textColor="@color/Black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="17dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22">

                <LinearLayout
                    android:id="@+id/possibleAppListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="33dp">

                        <ImageButton
                            android:id="@+id/imageButton9"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/outline_rectangle_button"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_plus_button"
                            app:layout_constraintBottom_toTopOf="@+id/textView23"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="앱 추가"
                            android:textColor="@color/SeedBrown"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageButton9" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/deleteButton"
                    android:layout_width="90dp"
                    android:layout_height="27dp"
                    android:layout_marginRight="28dp"
                    android:background="@drawable/solid_rectangle_button"
                    android:backgroundTint="@color/Gray"
                    android:text="삭제"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/completeButton"
                    android:layout_width="90dp"
                    android:layout_height="27dp"
                    android:background="@drawable/solid_rectangle_button"
                    android:text="확인"
                    android:textColor="@color/Black"
                    android:textSize="14sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>