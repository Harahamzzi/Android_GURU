<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GURU_Hemjee" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/BrightYellow</item>
        <item name="colorPrimaryVariant">@color/Yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="toolbarStyle">@style/CustomToolBar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--상태바 없애기-->
        <item name="android:windowFullscreen">true</item>
        <!-- 바텀시트 다이얼로그 둥글게 -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    
    <style name="CustomToolBar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/Black</item>
    </style>
    
    <style name="NavigationFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/solid_big_goal_item_expand_box</item>
    </style>

    <style name="EditTextCursorStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/Black</item>
    </style>

    <!-- 팝업 캘린더 -->
    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- 상단 타이틀 색상 -->
        <item name="colorAccent">@color/Yellow</item>

        <!-- 취소/확인 버튼 색상 -->
        <item name="colorOnPrimary">@color/Black</item>
    </style>
</resources>